<%= erb :header %>

<div class="container">
  <% @vendor_orders.each do |order| %>
    <h2>
      <%= order.vendor_name %>
      <%= order.ordered_at.strftime("%D") rescue "" %>
      <span class="label label-status-<%= order.status %>"><%= Order::STATUS_MAP[order.status] %></span>
    </h2>
    <%= erb :order_items_list, :locals => { :order_items => order.order_items } %>
  <% end %>
</div>

<%= erb :footer %>
